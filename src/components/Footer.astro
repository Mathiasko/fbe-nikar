---
import { useTranslations, type Lang } from '../i18n/utils';

interface Props {
  lang: Lang;
}

const { lang } = Astro.props;
const t = useTranslations(lang);
---

<footer class="footer">
  <div class="footer-container">
    <div class="footer-contact">
      <div class="footer-contact__item">
        <span class="footer-contact__label">{t('contact.addressLabel')}:</span>
        <span>NIKAR s.r.o., Liptovsk√° 10, 821 09 Bratislava</span>
      </div>
      <div class="footer-contact__item">
        <span class="footer-contact__label">{t('contact.phoneLabel')}:</span>
        <a href="tel:+421254642652">{t('contact.phone')}</a>
      </div>
      <div class="footer-contact__item">
        <span class="footer-contact__label">{t('contact.emailLabel')}:</span>
        <a href="mailto:info@nikar.sk">{t('contact.email')}</a>
      </div>
    </div>
    <div class="footer-meta">
      <p class="copyright">&copy; 2026 NIKAR, s.r.o.</p>
      <p class="credit">Design: FBE</p>
    </div>
  </div>
</footer>

<style>
  .footer {
    background-color: var(--color-primary-dark);
    color: white;
    padding: 2rem 0;
    margin-top: auto;
  }

  .footer-container {
    max-width: var(--container-max-width);
    margin: 0 auto;
    padding: 0 var(--spacing-unit);
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    flex-wrap: wrap;
    gap: 1.5rem;
  }

  .footer-contact {
    display: flex;
    flex-wrap: wrap;
    gap: 1rem 2rem;
  }

  .footer-contact__item {
    font-size: 0.875rem;
  }

  .footer-contact__label {
    font-weight: 600;
    margin-right: 0.25rem;
  }

  .footer-contact a {
    color: #b8d4a8;
    text-decoration: underline;
  }

  .footer-contact a:hover {
    color: #d4e8c8;
  }

  .footer-meta {
    display: flex;
    gap: 1.5rem;
    align-items: center;
  }

  .copyright,
  .credit {
    margin: 0;
    font-size: 0.875rem;
  }

  .credit {
    opacity: 0.8;
  }

  @media (max-width: 768px) {
    .footer-container {
      flex-direction: column;
      align-items: flex-start;
    }

    .footer-contact {
      flex-direction: column;
      gap: 0.5rem;
    }

    .footer-meta {
      width: 100%;
      justify-content: space-between;
      padding-top: 1rem;
      border-top: 1px solid rgba(255, 255, 255, 0.2);
    }
  }
</style>
