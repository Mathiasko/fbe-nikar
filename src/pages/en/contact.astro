---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';

const lang = 'en';
const t = useTranslations(lang);

// Contact info with proper links
const email = t('contact.email');
const phone = t('contact.phone');
// Format phone for tel: link (remove spaces)
const phoneLink = phone.replace(/\s/g, '');
---

<BaseLayout
  title={`${t('page.contact.title')} | ${t('ui.siteName')}`}
  description={t('page.contact.description')}
  lang={lang}
>
  <div class="contact-page">
    <h1>{t('page.contact.title')}</h1>
    <p class="contact-intro">{t('contact.intro')}</p>

    <div class="contact-grid">
      <div class="contact-info">
        <div class="contact-item">
          <h2 class="contact-item__label">{t('contact.addressLabel')}</h2>
          <p class="contact-item__value">{t('contact.address')}</p>
        </div>

        <div class="contact-item">
          <h2 class="contact-item__label">{t('contact.phoneLabel')}</h2>
          <p class="contact-item__value">
            <a href={`tel:${phoneLink}`} class="contact-link">{phone}</a>
          </p>
        </div>

        <div class="contact-item">
          <h2 class="contact-item__label">{t('contact.emailLabel')}</h2>
          <p class="contact-item__value">
            <a href={`mailto:${email}`} class="contact-link">{email}</a>
          </p>
        </div>

        <div class="contact-item">
          <h2 class="contact-item__label">{t('contact.hoursLabel')}</h2>
          <p class="contact-item__value">{t('contact.hours')}</p>
        </div>
      </div>

      <div class="contact-location">
        <p class="location-note">{t('contact.locationNote')}</p>
      </div>
    </div>
  </div>
</BaseLayout>

<style>
  .contact-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .contact-intro {
    margin-bottom: 2rem;
    color: var(--color-text-light);
    font-size: 1.1rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 2rem;
  }

  @media (min-width: 600px) {
    .contact-grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  .contact-info {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .contact-item {
    background: var(--color-background-alt);
    border-radius: 4px;
    padding: 1.25rem;
    border: 1px solid var(--color-border);
  }

  .contact-item__label {
    font-size: 0.9rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    color: var(--color-primary);
    margin-bottom: 0.5rem;
    font-weight: 600;
  }

  .contact-item__value {
    font-size: 1.1rem;
    color: var(--color-text);
    margin-bottom: 0;
    line-height: 1.5;
  }

  .contact-link {
    color: var(--color-primary-dark);
    font-weight: 500;
    text-decoration: none;
    border-bottom: 1px solid transparent;
    transition: border-color 0.2s ease;
  }

  .contact-link:hover {
    color: var(--color-primary);
    border-bottom-color: var(--color-primary);
    text-decoration: none;
  }

  .contact-location {
    display: flex;
    align-items: center;
  }

  .location-note {
    background: rgba(107, 123, 0, 0.1);
    padding: 1.5rem;
    border-radius: 4px;
    border-left: 4px solid var(--color-primary);
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: 0;
  }
</style>
