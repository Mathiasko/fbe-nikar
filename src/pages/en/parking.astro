---
import BaseLayout from "../../layouts/BaseLayout.astro";
import { useTranslations } from "../../i18n/utils";

const lang = "en";
const t = useTranslations(lang);
---

<BaseLayout
	title={`${t("page.parking.title")} | ${t("ui.siteName")}`}
	description={t("page.parking.description")}
	lang={lang}>
	<div class="parking-page">
		<h1>{t("page.parking.title")}</h1>

		<div class="parking-content">
			<!-- Maps Section -->
			<div class="parking-section">
				<h2>How to Get Here</h2>
				<div class="maps-grid">
					<div class="map-item">
						<img
							src="/images/bigMap.webp"
							alt="Map showing route to NIKAR Training Center"
							class="map-image"
						/>
						<p class="map-caption">Route to our center</p>
					</div>
					<div class="map-item">
						<img
							src="/images/smallMap.webp"
							alt="Map showing entrance and parking location"
							class="map-image"
						/>
						<p class="map-caption">Entrance and parking</p>
					</div>
				</div>
			</div>

			<!-- Free Parking Section -->
			<div class="parking-section parking-section--free">
				<h2>Free Parking</h2>
				<p>
					We have <strong>7 private parking spaces</strong> available on our property with designated
					traffic markings.
				</p>
				<ul class="parking-list">
					<li><strong>2 spaces</strong> are accessible directly from Liptovská street</li>
					<li><strong>5 spaces</strong> can be reached from Turčianska street</li>
				</ul>
			</div>

			<!-- Paid Parking Section -->
			<div class="parking-section">
				<h2>Paid Parking Nearby</h2>
				<p>Once free spaces are occupied, clients may use the surrounding paid parking zones.</p>
				<p class="parking-price">
					<strong>Zone parking rate: €1.50/hour</strong> (between 08:00 - 24:00)
				</p>
				<p class="parking-zone">
					<strong>Zone code:</strong> 2015 &nbsp;|&nbsp; <strong>Location:</strong> Zvolenská-Oravská
				</p>

				<h3>Payment Methods</h3>
				<div class="payment-methods">
					<div class="payment-method">
						<h4>Mobile Applications</h4>
						<p>Payment can be made through these apps:</p>
						<ul class="app-list">
							<li>ParkDots</li>
							<li>easyPark</li>
							<li>HOPIN</li>
							<li>MPLA</li>
							<li>Bmove</li>
						</ul>
						<p class="payment-note">
							Enter your vehicle registration, select the parking zone code, choose duration, and
							pay.
						</p>
					</div>
					<div class="payment-method">
						<h4>Parking Meter</h4>
						<p>Pay by card at the parking machine using the zone code.</p>
					</div>
				</div>
			</div>
			<!-- Important Note with Image -->
			<div class="parking-section">
				<h2>Important Notice</h2>
				<div class="warning-content">
					<div class="warning-text">
						<p><strong>Liptovská and Turčianska streets are one-way.</strong></p>
						<p>Please follow traffic signs when arriving.</p>
					</div>
					<div class="warning-image">
						<img src="/images/pristup.webp" alt="One-way street information" class="access-image" />
					</div>
				</div>
			</div>

			<!-- Bikes and Motorcycles -->
			<div class="parking-section">
				<h2>Bicycles, Motorcycles & Cars</h2>
				<ul class="parking-list">
					<li><strong>Bicycles:</strong> Protected parking behind the building on the terrace</li>
					<li><strong>Motorcycles:</strong> Parking near the building entrance</li>
					<li><strong>Cars:</strong> 2 parking spaces from Liptovská street + 5 parking spaces from Turčianska street</li>
				</ul>
				<div class="bike-images">
					<div class="bike-image-item">
						<img src="/images/bike.jpg" alt="Motorcycle parking" class="bike-image" />
						<p class="bike-caption">Motorcycle parking</p>
					</div>
					<div class="bike-image-item">
						<img src="/images/bicycle.webp" alt="Bicycle parking" class="bike-image" />
						<p class="bike-caption">Bicycle parking</p>
					</div>
					<div class="bike-image-item">
						<img src="/images/out1.webp" alt="Building exterior" class="bike-image" />
						<p class="bike-caption">Parking 1</p>
					</div>
					<div class="bike-image-item">
						<img src="/images/out2.webp" alt="Building exterior" class="bike-image" />
						<p class="bike-caption">Parking 2</p>
					</div>
				</div>
			</div>
		</div>
	</div>
</BaseLayout>

<style>
	.parking-page {
		max-width: 900px;
		margin: 0 auto;
	}

	.parking-content {
		display: flex;
		flex-direction: column;
		gap: 2rem;
	}

	.parking-section {
		background: var(--color-background-alt);
		border-radius: 4px;
		padding: 1.5rem;
		border: 1px solid var(--color-border);
	}

	.parking-section--free {
		border-left: 4px solid var(--color-primary);
	}

	.parking-section h2 {
		font-size: 1.25rem;
		color: var(--color-primary-dark);
		margin-bottom: 1rem;
	}

	.parking-section h3 {
		font-size: 1.1rem;
		color: var(--color-text);
		margin-top: 1.5rem;
		margin-bottom: 1rem;
	}

	.parking-section h4 {
		font-size: 1rem;
		color: var(--color-primary-dark);
		margin-bottom: 0.5rem;
	}

	.parking-list {
		margin: 0.5rem 0;
		padding-left: 1.5rem;
	}

	.parking-list li {
		margin-bottom: 0.5rem;
		line-height: 1.6;
	}

	.parking-section p {
		margin: 0 0 0.75rem 0;
		line-height: 1.6;
	}

	.parking-price {
		background: rgba(107, 123, 0, 0.1);
		padding: 0.75rem 1rem;
		border-radius: 4px;
		margin-top: 0.75rem;
	}

	.parking-zone {
		background: var(--color-background);
		padding: 0.5rem 1rem;
		border-radius: 4px;
		border: 1px solid var(--color-border);
		font-size: 0.95rem;
	}

	/* Maps Grid */
	.maps-grid {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1.5rem;
		margin-top: 1rem;
	}

	.map-item {
		text-align: center;
	}

	.map-image {
		width: 100%;
		height: auto;
		border-radius: 4px;
		border: 1px solid var(--color-border);
	}

	.map-caption {
		margin-top: 0.5rem;
		font-size: 0.875rem;
		color: var(--color-text-light);
		margin-bottom: 0;
	}

	/* Payment Methods */
	.payment-methods {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1rem;
		margin-top: 1rem;
	}

	.payment-method {
		background: var(--color-background);
		padding: 1rem;
		border-radius: 4px;
		border: 1px solid var(--color-border);
	}

	.app-list {
		display: flex;
		flex-wrap: wrap;
		gap: 0.5rem;
		list-style: none;
		padding: 0;
		margin: 0.5rem 0;
	}

	.app-list li {
		background: var(--color-primary);
		color: white;
		padding: 0.25rem 0.75rem;
		border-radius: 3px;
		font-size: 0.875rem;
	}

	.payment-note {
		font-size: 0.875rem;
		color: var(--color-text-light);
		margin-top: 0.5rem;
		margin-bottom: 0;
	}

	/* Bike Images */
	.bike-images {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 1.5rem;
		margin-top: 1.5rem;
	}

	.bike-image-item {
		text-align: center;
	}

	.bike-image {
		width: 100%;
		height: auto;
		border-radius: 4px;
		border: 1px solid var(--color-border);
	}

	.bike-caption {
		margin-top: 0.5rem;
		font-size: 0.875rem;
		color: var(--color-text-light);
		margin-bottom: 0;
	}

	/* Warning Section */
	.warning-content {
		display: flex;
		flex-direction: column;
		gap: 1.5rem;
	}

	.warning-text {
		background: rgba(107, 123, 0, 0.1);
		padding: 1rem;
		border-radius: 4px;
		border-left: 4px solid var(--color-primary);
	}

	.warning-text p {
		margin-bottom: 0.5rem;
	}

	.warning-text p:last-child {
		margin-bottom: 0;
	}

	.access-image {
		width: 100%;
		height: auto;
		border-radius: 4px;
		border: 1px solid var(--color-border);
	}

	@media (max-width: 700px) {
		.maps-grid,
		.bike-images {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 600px) {
		.payment-methods {
			grid-template-columns: 1fr;
		}
	}

	@media (max-width: 480px) {
		.parking-section {
			padding: 1rem;
		}

		.app-list li {
			font-size: 0.8rem;
			padding: 0.2rem 0.5rem;
		}
	}
</style>
