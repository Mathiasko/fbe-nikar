---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { useTranslations } from '../../i18n/utils';
import Home1 from '../../../public/images/home1.webp';
import Home2 from '../../../public/images/home2.webp';
import Home3 from '../../../public/images/home3.webp';
import Home4 from '../../../public/images/home4.webp';
import Image from 'astro/components/Image.astro';

const lang = 'en';
const t = useTranslations(lang);
---

<BaseLayout
  title={`${t('page.home.title')} | ${t('ui.siteName')}`}
  description={t('page.home.description')}
  lang={lang}
>
  <!-- Hero Section -->
  <section class="hero">
    <div class="hero__image">
      <!-- Placeholder for main hero image - terrace/garden view -->
      <Image src={Home1} alt="Hero Image" width={1200} height={800} />
    </div>
    <div class="hero__content">
      <p class="hero__intro">{t('home.intro')}</p>
      <p class="hero__detail">{t('home.introDetail')}</p>

      <div class="hero__slogan">
        <span class="slogan__for">{t('home.slogan.for')}</span>
        <span class="slogan__training">{t('home.slogan.training')}</span>
        <span class="slogan__excellence">{t('home.slogan.excellence')}</span>
      </div>

      <div class="hero__cta">
        <a href="/en/room-overview/" class="btn btn--primary">{t('home.cta.rooms')}</a>
        <a href="/en/pricing/" class="btn btn--secondary">{t('home.cta.pricing')}</a>
      </div>
    </div>
  </section>

  <!-- Gallery Preview Section -->
  <section class="gallery-preview">
    <h2 class="gallery-preview__title">{t('home.featuredGallery')}</h2>
    <div class="gallery-preview__grid">
      <div class="gallery-preview__item">
        <!-- Placeholder for training room image -->
        <Image src={Home2} alt="Hero Image" width={1200} height={800} />
      </div>
      <div class="gallery-preview__item">
        <!-- Placeholder for training in progress -->
        <Image src={Home3} alt="Hero Image" width={1200} height={800} />
      </div>
      <div class="gallery-preview__item">
        <!-- Placeholder for participants/discussion -->
        <Image src={Home4} alt="Hero Image" width={1200} height={800} />
      </div>
    </div>
    <div class="gallery-preview__cta">
      <a href="/en/photo-gallery/" class="btn btn--outline">{t('nav.photoGallery')} &rarr;</a>
    </div>
  </section>
</BaseLayout>

<style>
  /* Hero Section */
  .hero {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-bottom: 4rem;
    min-height: 500px;
  }

  .hero__image {
    position: relative;
  }

  .hero__content {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem 0;
  }

  .hero__intro {
    font-size: 1.5rem;
    font-weight: 600;
    color: var(--color-text);
    line-height: 1.4;
    margin-bottom: 1rem;
  }

  .hero__detail {
    font-size: 1.125rem;
    color: var(--color-text-light);
    line-height: 1.6;
    margin-bottom: 2.5rem;
  }

  /* Slogan Styling */
  .hero__slogan {
    margin-bottom: 2.5rem;
    line-height: 1.1;
  }

  .slogan__for {
    display: block;
    font-size: 2.5rem;
    font-style: italic;
    color: var(--color-text-light);
    font-weight: 300;
  }

  .slogan__training {
    display: block;
    font-size: 3.5rem;
    font-weight: 700;
    color: var(--color-primary-dark);
    margin-left: 1rem;
  }

  .slogan__excellence {
    display: block;
    font-size: 4rem;
    font-style: italic;
    font-weight: 300;
    color: var(--color-text-light);
    letter-spacing: 0.02em;
  }

  /* CTA Buttons */
  .hero__cta {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .btn {
    display: inline-block;
    padding: 0.875rem 1.75rem;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    border-radius: 4px;
    transition: all 0.2s ease;
    text-align: center;
  }

  .btn--primary {
    background: var(--color-primary);
    color: white;
  }

  .btn--primary:hover {
    background: var(--color-primary-dark);
    text-decoration: none;
    color: white;
  }

  .btn--secondary {
    background: transparent;
    color: var(--color-primary-dark);
    border: 2px solid var(--color-primary);
  }

  .btn--secondary:hover {
    background: var(--color-primary);
    color: white;
    text-decoration: none;
  }

  .btn--outline {
    background: transparent;
    color: var(--color-primary);
    border: 1px solid var(--color-border);
    padding: 0.75rem 1.5rem;
  }

  .btn--outline:hover {
    border-color: var(--color-primary);
    background: rgba(107, 123, 0, 0.05);
    text-decoration: none;
  }

  /* Images */
  .hero__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
  }

  .gallery-preview__item img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  /* Gallery Preview Section */
  .gallery-preview {
    padding: 3rem 0;
    border-top: 1px solid var(--color-border);
  }

  .gallery-preview__title {
    text-align: center;
    margin-bottom: 2rem;
    font-size: 1.75rem;
    color: var(--color-primary-dark);
  }

  .gallery-preview__grid {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .gallery-preview__item {
    aspect-ratio: 4 / 3;
    overflow: hidden;
    border-radius: 8px;
  }

  .gallery-preview__cta {
    text-align: center;
  }

  /* Responsive */
  @media (max-width: 900px) {
    .hero {
      grid-template-columns: 1fr;
      gap: 2rem;
      min-height: auto;
    }

    .hero__image {
      order: -1;
    }

    .hero__content {
      padding: 0;
    }

    .slogan__for {
      font-size: 2rem;
    }

    .slogan__training {
      font-size: 2.75rem;
    }

    .slogan__excellence {
      font-size: 3rem;
    }

    .gallery-preview__grid {
      grid-template-columns: 1fr 1fr;
    }
  }

  @media (max-width: 600px) {
    .hero__intro {
      font-size: 1.25rem;
    }

    .hero__detail {
      font-size: 1rem;
    }

    .slogan__for {
      font-size: 1.5rem;
    }

    .slogan__training {
      font-size: 2rem;
      margin-left: 0.5rem;
    }

    .slogan__excellence {
      font-size: 2.25rem;
    }

    .hero__cta {
      flex-direction: column;
    }

    .btn {
      width: 100%;
    }

    .gallery-preview__grid {
      grid-template-columns: 1fr;
    }
  }

  @media (max-width: 480px) {
    .hero {
      gap: 1.5rem;
      margin-bottom: 2.5rem;
    }

    .hero__intro {
      font-size: 1.125rem;
    }

    .hero__detail {
      font-size: 0.95rem;
      margin-bottom: 2rem;
    }

    .hero__slogan {
      margin-bottom: 2rem;
    }

    .slogan__for {
      font-size: 1.25rem;
    }

    .slogan__training {
      font-size: 1.75rem;
    }

    .slogan__excellence {
      font-size: 2rem;
    }

    .gallery-preview {
      padding: 2rem 0;
    }

    .gallery-preview__title {
      font-size: 1.5rem;
    }
  }
</style>
