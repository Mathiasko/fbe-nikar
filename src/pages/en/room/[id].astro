---
/**
 * Room Detail Page (English)
 *
 * Dynamic route for individual room pages showing features and image gallery.
 */
import BaseLayout from '../../../layouts/BaseLayout.astro';
import RoomLightbox from '../../../components/RoomLightbox.astro';
import { rooms, featureKeys } from '../../../data/rooms';
import { useTranslations } from '../../../i18n/utils';
import type { GetStaticPaths } from 'astro';

export const getStaticPaths: GetStaticPaths = () => {
  return rooms.map((room) => ({
    params: { id: room.id },
  }));
};

const { id } = Astro.params;
const room = rooms.find((r) => r.id === id);

if (!room) {
  return Astro.redirect('/en/room-overview/');
}

const lang = 'en';
const t = useTranslations(lang);

// Feature translation key mapping
const featureTranslationKeys: Record<string, string> = {
  projectionScreen: 'room.feature.projectionScreen',
  dataProjector: 'room.feature.dataProjector',
  smartBoard: 'room.feature.smartBoard',
  flipchart: 'room.feature.flipchart',
  internet: 'room.feature.internet',
  extraTrainingSpace: 'room.feature.extraTrainingSpace',
  terraceAccess: 'room.feature.terraceAccess',
  barrierFree: 'room.feature.barrierFree',
  airConditioning: 'room.feature.airConditioning',
  audioSystem: 'room.feature.audioSystem'
};

// Get enabled features
const enabledFeatures = featureKeys.filter((key) => room.features[key]);
---

<BaseLayout
  title={`${room.name[lang]} | ${t('page.roomOverview.title')} | ${t('ui.siteName')}`}
  description={`${room.name[lang]} - ${room.size} m², capacity ${room.capacity}`}
  lang={lang}
>
  <div class="room-detail-page">
    <a href="/en/room-overview/" class="back-link">
      &larr; {t('room.backToOverview')}
    </a>

    <header class="room-detail-header" style={`border-left-color: ${room.color};`}>
      <h1 style={`color: ${room.color};`}>{room.name[lang]}</h1>
      <p class="room-specs">
        <span>{t('room.feature.size')}: {room.size} m²</span>
        <span class="room-specs__separator">|</span>
        <span>{t('room.feature.capacity')}: {room.capacity}</span>
        <span class="room-specs__separator">|</span>
        <span>{t('room.floor')}: {room.floor}</span>
      </p>
    </header>

    <section class="room-features">
      <h2>{t('room.features')}</h2>
      <ul class="feature-list">
        {enabledFeatures.map((featureKey) => (
          <li class="feature-list__item">
            <span class="feature-checkmark">&#10003;</span>
            {t(featureTranslationKeys[featureKey])}
          </li>
        ))}
      </ul>
    </section>

    <section class="room-gallery">
      <h2>{t('room.gallery')}</h2>
      <RoomLightbox images={room.images} roomName={room.name[lang]} roomId={room.id} />
    </section>

    <p class="room-detail-cta">
      {t('roomOverview.cta')} <a href={`/${lang}/pricing/`}>{t('roomOverview.pricingLink')}</a>.
    </p>
  </div>
</BaseLayout>

<style>
  .room-detail-page {
    max-width: 900px;
    margin: 0 auto;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 1.5rem;
    color: var(--color-primary);
    font-weight: 500;
    text-decoration: none;
  }

  .back-link:hover {
    color: var(--color-primary-dark);
    text-decoration: underline;
  }

  .room-detail-header {
    border-left: 6px solid;
    padding-left: 1.5rem;
    margin-bottom: 2rem;
  }

  .room-detail-header h1 {
    margin-bottom: 0.5rem;
    font-size: 2rem;
  }

  .room-specs {
    color: var(--color-text-light);
    font-size: 1.1rem;
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
  }

  .room-specs__separator {
    color: var(--color-border);
  }

  .room-features {
    margin-bottom: 2.5rem;
  }

  .room-features h2,
  .room-gallery h2 {
    font-size: 1.5rem;
    color: var(--color-primary-dark);
    margin-bottom: 1rem;
    padding-bottom: 0.5rem;
    border-bottom: 2px solid var(--color-primary);
  }

  .feature-list {
    list-style: none;
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 0.75rem;
  }

  .feature-list__item {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    padding: 0.5rem 0;
  }

  .feature-checkmark {
    color: var(--color-primary);
    font-weight: bold;
    font-size: 1.1rem;
  }

  .room-gallery {
    margin-bottom: 2rem;
  }

  .room-detail-cta {
    margin-top: 2rem;
    font-size: 1.1rem;
    padding-top: 1.5rem;
    border-top: 1px solid var(--color-border);
  }

  .room-detail-cta a {
    color: var(--color-primary);
    font-weight: 500;
  }

  .room-detail-cta a:hover {
    color: var(--color-primary-dark);
    text-decoration: underline;
  }

  @media (max-width: 600px) {
    .room-detail-header h1 {
      font-size: 1.5rem;
    }

    .room-specs {
      flex-direction: column;
      gap: 0.25rem;
    }

    .room-specs__separator {
      display: none;
    }

    .feature-list {
      grid-template-columns: 1fr;
    }
  }
</style>
